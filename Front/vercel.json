{
  "version": 2,
  "builds": [
    {
      "src": "front/package.json",
      "use": "@vercel/react"
    },
    {
      "src": "Backend/app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/Backend/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/front/build/$1"
    }
  ]
}
